  ("c" "च्")
  ("C" "छ्")			      ; not in ITRANS Devenagari table
  ("chh" "छ्")
  ("j" "ज्")
  ("jh" "झ्")
  ("J" "झ्")
  ("nch" "ञ्च्")
  ("nCh" "ञ्छ्")			      ; not in ITRANS Devenagari table
