  ("Dh" "ढ्")
  (".D" "ड़्")
  (".Dh" "ढ़्")
  ("nT" "ण्ट्")
  ("nTh" "ण्ठ्")
  ("nD" "ण्ड्")
  ("nDh" "ण्ढ्")
  ("N" "ण्")
  ("t" "त्")
