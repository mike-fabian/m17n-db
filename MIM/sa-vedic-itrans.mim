  ("nc" "ञ्च्")
  ("nC" "ञ्छ्")			      ; not in ITRANS Devanagari table
  ("nchh" "ञ्छ्")
  ("nj" "ञ्ज्")
  ("njh" "ञ्झ्")
  ("nJ" "ञ्झ्")
  ("~n" "ञ्")
  ("JN" "ञ्")
  ("T" "ट्")
  ("Th" "ठ्")
