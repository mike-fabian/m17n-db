  ("ngh" "ङ्घ्")
  ("nG" "ङ्घ्")
  ("~N" "ङ्")
  ("N^" "ङ्")
  ("ch" "च्")
  ("Ch" "छ्")			      ; not in ITRANS Devanagari table
  ("c" "च्")
  ("C" "छ्")			      ; not in ITRANS Devanagari table
  ("chh" "छ्")
  ("j" "ज्")
